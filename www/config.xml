<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns:gap="http://phonegap.com/ns/1.0"
    id="com.zenodus.client"
    version="0.0.1.2"
    xmlns="http://www.w3.org/ns/widgets" >

    <preference
        name="phonegap-version"
        value="2.4.0" />

    <name>YesWeScore</name>

    <description>
- Live score on Internet
- Send your results to Facebook
- Few different types of scoring plus custom option. 
- Full scoreboard always visible
    </description>

    <author
        email="support@yeswescore.com"
        href="https://www.yeswescore.com" ZENODUS</author>

    <icon src="icon.png" />
    
    <preference
        name="orientation"
        value="portrait" />
    
    <preference name="webviewbounce" value="false" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/device" />

    <!-- Whitelisting -->
    <access origin="*" />
    <!-- <access origin="http://api.yeswescore.com" subdomains="true" /> -->

</widget>